repo propensive/probably

project anticipation
  module css
    sources src/css

  module url
    sources src/url

  module html
    sources src/html

  module http
    sources src/http

  # Rename this to `path` at some point
  module file
    sources src/file

  module time
    sources src/time

  module all
    include anticipation/css
    include anticipation/html
    include anticipation/http
    include anticipation/file
    include anticipation/time
    include anticipation/url
  
